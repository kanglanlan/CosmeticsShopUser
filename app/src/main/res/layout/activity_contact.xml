<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <include layout="@layout/xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/Font14_hui2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="紧急联系人一" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧急联系人姓名："
                android:layout_marginRight="6dp"/>

            <EditText
                android:id="@+id/et_name1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:maxLength="20"
                style="@style/Font14"
                android:text=""/>
        </LinearLayout>

        <include layout="@layout/xiantwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧急联系人号码："
                android:layout_marginRight="6dp"/>

            <EditText
                android:id="@+id/et_phone1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:maxLength="11"
                android:inputType="number"
                style="@style/Font14"/>
        </LinearLayout>

        <TextView
            style="@style/Font14_hui2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="紧急联系人二" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧急联系人姓名："
                android:layout_marginRight="6dp"/>

            <EditText
                android:id="@+id/et_name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:maxLength="20"
                style="@style/Font14"/>
        </LinearLayout>

        <include layout="@layout/xiantwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紧急联系人号码："
                android:layout_marginRight="6dp"/>

            <EditText
                android:id="@+id/et_phone2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:maxLength="11"
                android:inputType="number"
                android:text=""
                style="@style/Font14"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tv_tijiao"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@drawable/login_bt"
        android:text="提交" />

</LinearLayout>
