<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg">

    <EditText
        android:id="@+id/commont_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="请输入留言内容（20字以内）"
        android:minLines="2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLength="30"
        android:textColor="@color/b3"
        android:background="@drawable/white_r_5"
        android:textSize="15sp"
        android:lineSpacingExtra="3dp"
        android:letterSpacing="0.1"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingRight="15dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_maxnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:text="0/30"
            android:textColor="@color/text6"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/login_bt3"
            android:gravity="center"
            android:text="提交留言"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>