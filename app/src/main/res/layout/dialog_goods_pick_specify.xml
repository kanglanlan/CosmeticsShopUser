<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/moren"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"/>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/main"
                android:textSize="9sp"/>

            <TextView
                android:id="@+id/stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="库存："
                android:textSize="14sp"
                android:textColor="#666666"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/specify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#666666"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_img63"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="12dp"/>
        

    </LinearLayout>

    <TextView
        android:id="@+id/specifyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品属性"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/specifyRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:layout_marginLeft="14dp"
            android:textSize="14sp"
            android:textColor="#666666"
            />

        <ImageView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_img61"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/buyNum"
            android:layout_width="wrap_content"
            android:minWidth="20dp"
            android:maxWidth="80dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="3dp"
            android:background="@color/transparent"
            android:inputType="number"
            android:gravity="center_horizontal"
            />

        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_img58"
            android:padding="10dp"
            android:layout_marginRight="14dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/addToCar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:text="加入购物车"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/addcar_bg"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            />

        <TextView
            android:id="@+id/buyNow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:text="立即购买"
            android:textSize="13sp"
            android:gravity="center"
            android:background="@drawable/buynow_bg"
            android:textColor="@color/white"
            android:paddingRight="15dp"
            />

    </LinearLayout>

</LinearLayout>