<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aboutus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <include layout="@layout/xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手  机" />

            <com.meida.cosmeticsshopuser.MyView.ClearEditText
                android:id="@+id/et_login_phone"
                android:textSize="14sp"
                android:textColor="@color/b3"
                android:textColorHint="@color/text9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入你的手机号"
                android:inputType="number"
                android:maxLength="11" />


        </LinearLayout>

        <include layout="@layout/xiantwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密  码" />

            <EditText
                android:id="@+id/et_login_psw"
                android:textSize="14sp"
                android:textColor="@color/b3"
                android:textColorHint="@color/text9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20" />

            <ToggleButton
                android:id="@+id/img_login_eye"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bt_mima"
                android:padding="10dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_bt"
        android:text="登录" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zhuce"
            style="@style/Font13_main"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="新用户注册" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_wangjimima"
            style="@style/Font13_main"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="忘记密码？"
            android:textColor="#033690" />
    </LinearLayout>
</LinearLayout>
