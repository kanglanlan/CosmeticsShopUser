<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.meida.cosmeticsshopuser.Activity.SubmitOrderActivity">

    <include layout="@layout/title" />

    <include layout="@layout/xian" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/addrView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/addrEmptyView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="选择收货地址"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:visibility="visible"
                        />

                    <TextView
                        android:id="@+id/namePhone"
                        style="@style/Font15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="姓名   135********"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/address"
                        style="@style/Font13_hui2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="10dp"
                        android:text="收货地址"
                        android:visibility="gone"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/you"
                    android:layout_marginRight="12dp"/>

            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/line_color"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/deliveryOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/option1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/optionName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同城配送"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/optionPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂不支持"
                        android:minHeight="43dp"
                        android:gravity="center_vertical"
                        android:textSize="11.5sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/optionTip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计费用"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/optionName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递配送"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/optionPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="--"
                        android:textSize="15sp"
                        android:minHeight="43dp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/optionTip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计费用"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/optionName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家自送"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/optionPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="--"
                        android:textSize="15sp"
                        android:minHeight="43dp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/optionTip3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计费用"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/colorLine"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/ico_lb097"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单详情"
                android:textColor="#666666"
                android:textSize="13sp"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/bg"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="配送费"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/main"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="优惠券"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/couponFree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint="请选择"
                    android:textColor="@color/main"
                    android:textSize="14sp"
                    android:drawableRight="@drawable/you"
                    android:drawablePadding="10dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="14dp"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计：  "
                    android:textSize="12sp"
                    android:textColor="@color/b3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textSize="12sp"
                    android:textColor="@color/main"/>

                <TextView
                    android:id="@+id/summery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/main"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingLeft="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留言"
                    android:textColor="@color/b3"
                    android:textSize="14sp"
                    android:layout_marginRight="14dp"
                    />

                <TextView
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="建议留言前与商家沟通确认（20字以内）"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:background="#00ffffff"
                    android:layout_marginRight="14dp"
                    android:maxLength="30"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/protect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/ico_img76"
                    android:padding="14dp"
                    android:text="防护功能"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/checkbox"
                    style="@style/Font14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:button="@null"
                    android:checked="false"
                    android:drawableRight="@drawable/cb_xiaoxi"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    />

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/line_color"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_vertical">
        
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="合计金额："
                android:textSize="14sp"
                android:textColor="#333333"
                android:paddingLeft="14dp"
                />

            <TextView
                android:id="@+id/orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/main"/>

            <TextView
                android:id="@+id/submit"
                android:layout_width="112dp"
                android:layout_height="49dp"
                android:text="提交订单"
                android:background="@drawable/login_bt0"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
