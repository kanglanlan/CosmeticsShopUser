<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:background="@drawable/ico_img22"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_qianbiaoshi"
                    style="@style/Font15_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qian" />

                <TextView
                    android:id="@+id/freeMoney"
                    style="@style/Font15_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="26sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/title"
                    style="@style/Font15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/time"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLength="15"
                    android:layout_marginTop="15dp"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/hasPick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_img19"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/pick"
                    style="@style/Font14_white"
                    android:layout_width="wrap_content"
                    android:minWidth="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginRight="12dp"
                    android:text="立即领取"
                    android:background="@drawable/couponbt10"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/useNow"
                    style="@style/Font14_white"
                    android:layout_width="wrap_content"
                    android:minWidth="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginRight="12dp"
                    android:text="立即使用"
                    android:background="@drawable/couponbt10"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/hasUse"
                    style="@style/Font14_white"
                    android:layout_width="wrap_content"
                    android:minWidth="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginRight="12dp"
                    android:text="已使用"
                    android:background="@drawable/couponbt10"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>


            </FrameLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>
