<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/xian_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_xz"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:visibility="gone"
            android:src="@drawable/ico_img69" />
        <com.meida.cosmeticsshopuser.MyView.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="45dp"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp"
            android:src="@drawable/ico_img115" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="#606C98"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/Font12_hui2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="" />

            <TextView
                android:id="@+id/tv_content"
                style="@style/Font13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:maxLines="3"
                android:text="" />

            <com.meida.cosmeticsshopuser.MyView.CustomGridView
                android:id="@+id/gv_faxainpic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/white"
                android:numColumns="3"
                android:verticalSpacing="10dp">

            </com.meida.cosmeticsshopuser.MyView.CustomGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ico_img33"
                    android:drawablePadding="5dp"
                    android:paddingRight="6dp"
                    android:text="" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/tv_sc"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ico_img121"
                    android:drawablePadding="5dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_pj"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/ico_img88"
                    android:drawablePadding="5dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_liulan"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/ico_img119"
                    android:drawablePadding="5dp"
                    android:text="0" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
