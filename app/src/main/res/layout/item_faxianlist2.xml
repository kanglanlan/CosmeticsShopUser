<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_xz"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:visibility="gone"
            android:src="@drawable/ico_img69" />
        <com.meida.cosmeticsshopuser.MyView.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="45dp"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp"
            android:src="@drawable/ico_img115" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text=""
                    android:hint="匿名"
                    android:textColor="#606C98"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="删除"
                    style="@style/Font15_hui2"
                    android:drawableLeft="@drawable/ico_img71"
                    android:drawablePadding="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="8dp"
                    android:visibility="visible"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                style="@style/Font12_hui2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text=""
                android:hint="--"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/tv_content"
                style="@style/Font13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:text=""
                android:layout_marginRight="10dp"
                />
            <!--android:maxLines="3"-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/picRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                >

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <com.meida.cosmeticsshopuser.MyView.TextDrawable
                    android:id="@+id/tv_add"
                    style="@style/Font12_hui2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:paddingRight="6dp"
                    android:text=""
                    android:drawableLeft="@drawable/ico_img33"
                    app:isAliganCenter="false"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ico_img121"
                    android:layout_marginRight="3dp"/>

                <TextView
                    android:id="@+id/tv_sc"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_img88"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="12dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

                <TextView
                    android:id="@+id/tv_pj"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_img119"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="12dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

                <TextView
                    android:id="@+id/tv_liulan"
                    style="@style/Font12_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/xian_3" />

</LinearLayout>
