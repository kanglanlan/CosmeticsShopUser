<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_pj"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.meida.cosmeticsshopuser.MyView.CircleImageView
            android:id="@+id/img_pji"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ico_img115" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pjname"
                    style="@style/Font13"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="22222"
                    android:textColor="#606C98" />

                <CheckedTextView
                    android:id="@+id/cb_zan"
                    style="@style/Font11_main"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_zan"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:checked="false"
                    android:textColor="@drawable/selector_main_rb_check" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_pjcontent"
                style="@style/Font13_hui2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="222222" />

            <TextView
                android:id="@+id/tv_pjtype"
                style="@style/Font12_hui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:visibility="gone"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/Font12_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111111" />

                <TextView
                    android:id="@+id/tv_huifu"
                    android:layout_width="51dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/hfbg"
                    android:gravity="center"
                    android:text="回复TA"
                    android:textColor="@color/txthui"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/floor"
                    style="@style/Font12_hui"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical|right"
                    android:layout_marginBottom="2dp"
                    android:text=""
                    android:layout_marginRight="3dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_huifunum"
                    style="@style/Font12_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/ico_img114"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:paddingRight="50dp"
                    android:text="查看3条评论"
                    android:visibility="gone"/>



            </LinearLayout>


        </LinearLayout>
        


    </LinearLayout>

    <LinearLayout
        android:id="@+id/childParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/bg"
        android:layout_marginLeft="52dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:paddingTop="5dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="123245451232454523123245452312324545231232454523123245452312324545231232454523123245452323"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="1232454523"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/seeAllEval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="12dp"
        android:background="@color/bg">

        <TextView
            android:id="@+id/evalNum"
            style="@style/Font12_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/ico_img114"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:text="查看全部评价"
            android:visibility="visible"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color"
        android:layout_marginTop="8dp"/>


</LinearLayout>
